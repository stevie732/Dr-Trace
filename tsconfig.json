{
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
